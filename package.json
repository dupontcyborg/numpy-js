{
  "name": "numpy-js",
  "version": "0.0.1",
  "description": "Complete NumPy implementation for TypeScript and JavaScript",
  "main": "dist/numpy.node.js",
  "browser": "dist/numpy.browser.js",
  "module": "dist/numpy.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/numpy.node.js",
      "browser": "./dist/numpy.browser.js",
      "default": "./dist/numpy.esm.js"
    },
    "./node": {
      "types": "./dist/types/node.d.ts",
      "default": "./dist/numpy.node.js"
    },
    "./browser": {
      "types": "./dist/types/browser.d.ts",
      "default": "./dist/numpy.browser.js"
    }
  },
  "scripts": {
    "dev": "esbuild src/index.ts --bundle --sourcemap --watch --outfile=dist/numpy.dev.js",
    "build": "npm run build:clean && npm run build:node && npm run build:browser && npm run build:esm && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:node": "esbuild src/index.ts --bundle --platform=node --format=cjs --sourcemap --outfile=dist/numpy.node.js",
    "build:browser": "esbuild src/index.ts --bundle --platform=browser --format=iife --global-name=np --sourcemap --outfile=dist/numpy.browser.js",
    "build:esm": "esbuild src/index.ts --bundle --platform=neutral --format=esm --sourcemap --outfile=dist/numpy.esm.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "test": "vitest run",
    "test:quick": "vitest run --exclude tests/validation/exports.numpy.test.ts",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:validation": "vitest run tests/validation",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "numpy",
    "array",
    "ndarray",
    "matrix",
    "linear-algebra",
    "scientific-computing",
    "math",
    "statistics",
    "fft",
    "typescript",
    "javascript"
  ],
  "author": "Nicolas Dupont",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicolasdupont/numpy-js.git"
  },
  "bugs": {
    "url": "https://github.com/nicolasdupont/numpy-js/issues"
  },
  "homepage": "https://github.com/nicolasdupont/numpy-js#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.4",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@stdlib/ndarray": "^0.3.3",
    "@stdlib/blas": "^0.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
